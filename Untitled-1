    <script>
        // Simulación de login
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const matricula = document.getElementById('matricula').value;
            const password = document.getElementById('password').value;
            
            // Validación simple (en un sistema real sería más complejo)
            if(matricula && password) {
                // Ocultar login y mostrar dashboard
                document.getElementById('loginSection').style.display = 'none';
                document.getElementById('dashboardSection').style.display = 'block';
                
                // Aquí podríamos cargar datos reales del estudiante según su matrícula
            } else {
                alert('Por favor ingresa matrícula y contraseña');
            }
        });
        
        // Logout
        document.getElementById('logoutLink').addEventListener('click', function(e) {
            e.preventDefault();
            
            // Mostrar login y ocultar dashboard
            document.getElementById('loginSection').style.display = 'block';
            document.getElementById('dashboardSection').style.display = 'none';
            
            // Limpiar campos
            document.getElementById('matricula').value = '';
            document.getElementById('password').value = '';
        });
    </script>
